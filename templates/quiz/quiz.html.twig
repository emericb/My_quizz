{% extends 'base.html.twig' %}

    {% block stylesheets %}

		<style>

			.btn-info {
				background-color: #2C3E50;
				border-color: #2C3E50;
				margin-top: 0.5rem;
				margin-bottom: 0.5rem;
				font-size: 2rem;
			}

			.btn-info:hover {
				color: #1F9A83;
				background-color: #2C3E50;
			}

			.container {
				margin-top: 2rem;
			}

		</style>

    {% endblock %}

{% block body %}

    {% for categorie in data %}

    <div class="row justify-content-center">
    	<a class="btn btn-info col-5" href="{{ path('list', {'id': categorie.id}) }}">{{ categorie.title }}</a>
    </div>

 	<hr>

    {% endfor %}

{% endblock %}